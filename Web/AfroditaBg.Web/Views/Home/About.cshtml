@using AfroditaBg.Common
@inject IViewLocalizer Localizer
@{
    this.ViewData["Title"] = Localizer["За мен"];
    this.ViewData["About"] = "active";
}

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-6 pl-md-5 ftco-animate">
                <h2 class="mb-4">@Localizer["Добре дошли в света на красотата"]</h2>
                <p>@Localizer["Казвам се Веселка Йорданова Петрова. Родена съм на 14.02.1987г. в гр. Русе. Завършила съм ПГО, но в последствие открих, че моето призвание и страст е да творя красота с помощта на магията на грима. Част от моята работа може да откриете във видеоклипове излъчвани по ФЕН ТВ и в различни фотосесии."]</p>
                <p>@Localizer["За да бъдете блестящи на предстояща фотосесия, ревю, клип, реклама, сватба, бал или друг специален за Вас случай свържете се с мен на дадения телефон или e-mail адрес."]</p>
            </div>
            <div class="col-md-6 d-flex ftco-animate">
                <div class="img img-about align-self-stretch" style="background-image: url(/images/makeupAbout.jpg); width: 100%;"></div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <h2 class="mb-4">@Localizer["За Вас ще се погрижи"]</h2>
                <p>@Localizer["професионален гримьор и козметик"]</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-9 d-flex mb-sm-4 ftco-animate">
                <div class="staff">
                    <div class="img mb-4" style="background-image: url(/images/VeselkaPetrovaAbout.jpg);"></div>
                    <div class="info text-center">
                        <h3><a asp-area="" asp-controller="Contacts" asp-action="Index">@Localizer["Веселка Петрова"]</a></h3>
                        <span class="position">@Localizer["Гримьор"]</span>
                        <div class="text">
                            <p>"@Localizer["Красотата, за мен, е човек да се чувства комфортно в собствената си кожа. Това или да носи жестоко червено червило."]"</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
