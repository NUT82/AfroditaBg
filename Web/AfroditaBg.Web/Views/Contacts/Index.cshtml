@using AfroditaBg.Common
@inject IViewLocalizer Localizer
@{
    this.ViewData["Title"] = @Localizer["Контакти"];
    this.ViewData["Contact"] = "active";
}

@model AfroditaBg.Web.ViewModels.Contacts.SendMessageInputModel
<section class="ftco-section contact-section">
    <div class="container mt-5">
        <div class="row block-9">
            <div class="col-md-4 contact-info ftco-animate">
                <div class="row">
                    <div class="col-md-12 mb-4">
                        <h2 class="h4">@Localizer["Информация за връзка"]</h2>
                    </div>
                    <div class="col-md-12 mb-3">
                        <p><span>@Localizer["Адрес"]:</span> @Localizer["ул. Борисова 111 - 113 , Русе"]</p>
                    </div>
                    <div class="col-md-12 mb-3">
                        <p><span>@Localizer["Телефон"]:</span> <a href="tel://00359896752815">+359 896 75 28 15</a></p>
                    </div>
                    <div class="col-md-12 mb-3">
                        <p><span>@Localizer["Имейл"]:</span> <a href="mailto:v.iordanova@afrodita-bg.com">v.iordanova@afrodita-bg.com</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-6 ftco-animate">
                <form id="sendmsg" class="contact-form" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input asp-for="SenderName" class="form-control" placeholder=@Localizer["Вашето име*"]>
                                <span asp-validation-for="SenderName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input asp-for="SenderEmail" class="form-control" placeholder=@Localizer["Вашият имейл*"]>
                                <span asp-validation-for="SenderEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input asp-for="EmailSubject" class="form-control" placeholder=@Localizer["Тема"]>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Message" cols="30" rows="7" class="form-control" placeholder=@Localizer["Вашето съобщение*"]></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="@Localizer["Изпрати съобщение"]" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
