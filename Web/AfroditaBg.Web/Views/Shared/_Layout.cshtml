@using AfroditaBg.Common
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - @Localizer["Професионален гримьор и козметик"] - @Localizer["Веселка Петрова"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,600,700" rel="stylesheet">

    <link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <link rel="stylesheet" href="~/css/aos.css">

    <link rel="stylesheet" href="~/css/ionicons.min.css">

    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>
    <div class="hero-wrap js-fullheight" style="background-image: url('/images/beautiful-eyes-makeup.jpg');
    " data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="col-md-12 text-right">
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
                <div class="col-md-8 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                    <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">@Localizer["Веселка Петрова"]</h1>
                    <p class="mb-5" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">@Localizer["Професионален гримьор и козметик"]</p>
                </div>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> @Localizer["Меню"]
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item @ViewData["Home"]"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Начало"]</a></li>
                    <li class="nav-item @ViewData["About"]"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">@Localizer["За мен"]</a></li>
                    <li class="nav-item @ViewData["Procedure"]"><a class="nav-link" asp-area="" asp-controller="Procedures" asp-action="AllProcedures">@Localizer["Процедури"]</a></li>
                    <li class="nav-item @ViewData["Gallery"]"><a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Index">@Localizer["Галерия"]</a></li>
                    <li class="nav-item @ViewData["Blog"]"><a class="nav-link" asp-area="" asp-controller="Blog" asp-action="Index">@Localizer["Блог"]</a></li>
                    <li class="nav-item @ViewData["Contact"]"><a class="nav-link" asp-area="" asp-controller="Contacts" asp-action="Index">@Localizer["Контакти"]</a></li>
                    <li class="nav-item @ViewData["Links"]"><a class="nav-link" asp-area="" asp-controller="Links" asp-action="Index">@Localizer["Връзки"]</a></li>
                    <partial name="_LoginPartial" />
                </ul>

            </div>
        </div>
    </nav>
    <!-- END nav -->

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="ftco-footer ftco-section img">
        <div class="overlay"></div>
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-3">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">@Localizer["За мен"]</h2>
                        <p>@Localizer["За да бъдете блестящи на предстояща фотосесия, ревю, клип, реклама, сватба, бал или друг специален за Вас случай свържете се с мен на дадения телефон или e-mail адрес."]</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="ftco-footer-widget mb-4 ml-md-4">
                        <h2 class="ftco-heading-2">@Localizer["Процедури"]</h2>
                        <ul class="list-unstyled">
                            <vc:all-procedures></vc:all-procedures>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="ftco-footer-widget mb-4 ml-md-4">
                        <h2 class="ftco-heading-2">@Localizer["Галерия"]</h2>
                        <ul class="list-unstyled">
                            <vc:all-gallery-tags></vc:all-gallery-tags></ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">@Localizer["За контакти"]</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@Localizer["ул. Борисова 111 - 113 , Русе"]</span></li>
                                <li><a href="tel://00359896752815"><span class="icon icon-phone"></span><span class="text">+359 896 75 28 15</span></a></li>
                                <li><a href="mailto:v.iordanova@afrodita-bg.com"><span class="icon icon-envelope"></span><span class="text">v.iordanova@afrodita-bg.com</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> All rights reserved | Created by <a href="https://github.com/NUT82" target="_blank">@Localizer["Светослав Петров"]</a>
                    </p>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.easing.1.3.js" asp-append-version="true"></script>
    <script src="~/js/jquery.waypoints.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.stellar.min.js" asp-append-version="true"></script>
    <script src="~/js/owl.carousel.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.magnific-popup.min.js" asp-append-version="true"></script>
    <script src="~/js/aos.js" asp-append-version="true"></script>
    <script src="~/js/jquery.animateNumber.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap-datepicker.js" asp-append-version="true"></script>
    <script src="~/js/jquery.timepicker.min.js" asp-append-version="true"></script>
    <script src="~/js/scrollax.min.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
